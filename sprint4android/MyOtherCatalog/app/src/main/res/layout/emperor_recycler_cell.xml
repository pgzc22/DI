<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/emperor_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/emperor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BlueText"
        app:layout_constraintStart_toEndOf="@id/emperor_image_view"
        app:layout_constraintBottom_toBottomOf="@id/emperor_image_view"
        app:layout_constraintTop_toTopOf="@id/emperor_image_view"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BorderlessButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/emperor_image_view"
        app:layout_constraintTop_toBottomOf="@id/emperor_text_view"
        android:text="Detailed view"/>
</androidx.constraintlayout.widget.ConstraintLayout>